extends base
block content
  .row.center-align
    h3 Login to Your Account
  .row.center-align
    form.col.s12.m12.l12(action="/auth", method="post",id="loginForm")
      .row
        .input-field.col.s6.offset-s3
          input.validate(id="username",type="text",name="username")
          label(for="username") Username
      .row
        .input-field.col.s6.offset-s3
          input.validate(id="password",type="password",name="password")
          label(for="password") Password
      a.waves-effect.waves-light.btn(onClick="$('#loginForm').submit();") Login
